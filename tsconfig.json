{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "dist",
		"module": "esnext",
		"target": "es2019",
		"lib": ["ES2020", "dom"],
		"sourceMap": true,
		"jsx": "react-jsx",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"allowJs": true,
		"declarationMap": true,

		"noEmit": false
	},
	"include": ["src", "src/utils/images.d.ts"],
	"exclude": ["node_modules", "dist", "stories"]
}
